{
  "name": "drift/dbal-bundle",
  "description": "DriftPHP integration for DBAL",
  "type": "library",
  "license": "MIT",

  "authors": [
    {
      "name": "Marc Morera",
      "email": "yuhu@mmoreram.com"
    }
  ],

  "require": {
    "php": "^7.3",
    "drift/dbal": "0.1.*",
    "symfony/dependency-injection": "^5.0",
    "drift/http-kernel": "0.1.*, >=0.1.5",
    "mmoreram/base-bundle": "^2.1"
  },

  "require-dev": {
    "phpunit/phpunit": "7.5.17",
    "clue/block-react": "*",
    "react/mysql": "^0.5",
    "clue/reactphp-sqlite": "^1",
    "voryx/pgasync": "^2"
  },

  "suggest": {
    "react/mysql": "MySQL usage",
    "clue/reactphp-sqlite": "SQLite usage",
    "voryx/pgasync": "PostgreSQL Usage"
  },

  "autoload": {
    "psr-4": {
      "Drift\\DBAL\\": "."
    },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  }
}
